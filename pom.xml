<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.librarysystem</groupId>
  <artifactId>my-app</artifactId>
  <packaging>jar</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>my-app</name>
  <url>http://maven.apache.org</url>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
<properties>
  <!-- Chỉ định encoding khi đọc các file mã nguồn Java (để tránh lỗi ký tự đặc biệt như tiếng Việt) -->
  <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

  <!-- Chỉ định phiên bản Java tối thiểu mà mã nguồn phải tương thích (Java 8 trở lên) -->
  <maven.compiler.source>1.8</maven.compiler.source>

  <!-- Chỉ định phiên bản bytecode mà Maven sẽ tạo ra sau khi biên dịch (Java 8 trở lên) -->
  <maven.compiler.target>1.8</maven.compiler.target>
</properties>
</project>
